// Exception Handling
//Try and catch finnaly

#code1
class Main {
    public static void main(String[] args) {
    try{
       int balance = 5000;
       int withdraw = 6000;
       
       int result = balance - withdraw ;
        } catch(Exception e){
            System.out.println("Error occure");
        } finally{
             System.out.println("Transaction Completed");
            
        
            
        }
    }
}

#code 2

// Throw keyword 
// balance 5000
class Bank{
    void withdraw(int amount){
        if(amount>5000){
            throw new ArithmeticException("Insufficient Balance");
        }
        System.out.println("withdraw Successful");
    }
}

class Main {
    public static void main(String[] args) {
        Bank b = new Bank();
       b.withdraw(6000);
    }
}
